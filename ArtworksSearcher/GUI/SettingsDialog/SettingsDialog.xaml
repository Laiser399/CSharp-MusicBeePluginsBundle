<Window x:Class="ArtworksSearcher.GUI.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Artworks searcher settings" Width="600"
        SizeToContent="Height" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="6">
        <GroupBox Header="Google">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Text="Google CX:"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding GoogleCX}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Text="Google Key:"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding GoogleKey}"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Text="Count of parallel downloads:"/>
                    <TextBox Grid.Column="1"
                             HorizontalAlignment="Left"
                             MinWidth="60px"
                             Text="{Binding ParallelDownloadsCount}"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Osu!dir">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Text=" Osu songs directory:"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding OsuSongsDir}"/>
                <Button Grid.Row="0" Grid.Column="2"
                        Padding="6 0"
                        Content="..."
                        Command="{Binding ChangeOsuSongsDirCmd}"/>

                <TextBlock Grid.Row="1" Grid.Column="0"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Text="Min image size (in bytes):"/>
                <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                         HorizontalAlignment="Left"
                         MinWidth="120px"
                         Text="{Binding MinOsuImageByteSize}"/>
            </Grid>
        </GroupBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Ok" HorizontalAlignment="Right" Margin="0 0 8 0"
                    Click="Ok_Click"/>
            <Button Grid.Column="1" Content="Cancel" IsCancel="True"/>
        </Grid>
    </StackPanel>
</Window>
