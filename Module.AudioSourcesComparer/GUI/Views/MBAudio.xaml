<UserControl x:Class="Module.AudioSourcesComparer.GUI.Views.MBAudio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dtvm="clr-namespace:Module.AudioSourcesComparer.GUI.DesignTimeViewModels"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance dtvm:MBAudioDTVM}">
    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderThickness" Value="0 0 0 0.5" />
            <Setter Property="BorderBrush" Value="Gray" />
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Margin" Value="0 4" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="6 0" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="6 0" />
            <Setter Property="Padding" Value="6 0" />
        </Style>
    </UserControl.Resources>

    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="82px" />
                <ColumnDefinition Width="42px" />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="{Binding VkId}" />
            <TextBlock Grid.Column="1" Text="{Binding Index}" />
            <TextBlock Grid.Column="2" Text="{Binding Artist}" />
            <TextBlock Grid.Column="3" Text="{Binding Title}" />
            <Button Grid.Column="4" Content="..." />
        </Grid>
    </Border>

</UserControl>