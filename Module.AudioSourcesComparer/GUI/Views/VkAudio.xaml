<UserControl x:Class="Module.AudioSourcesComparer.GUI.Views.VkAudio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dtvm="clr-namespace:Module.AudioSourcesComparer.GUI.DesignTimeViewModels"
             mc:Ignorable="d"
             d:DesignWidth="300"
             d:DataContext="{d:DesignInstance dtvm:VkAudioDTVM}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Text="{Binding Id}" />
        <TextBlock Grid.Column="1" Text="{Binding Artist}" Margin="6 0 0 0" />
        <TextBlock Grid.Column="2" Text="{Binding Title}" Margin="6 0 0 0" />
        <Button Grid.Column="3" Content="..." />
        <Button Grid.Column="4" Content="Delete" />
    </Grid>
</UserControl>