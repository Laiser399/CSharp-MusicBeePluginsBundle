<UserControl x:Class="Module.MusicSourcesStorage.Gui.Views.WizardSteps.ProcessingStep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dtvm="clr-namespace:Module.MusicSourcesStorage.Gui.DesignTimeViewModels.WizardSteps"
             xmlns:components="clr-namespace:Module.Core.GUI.Views.Components;assembly=Module.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             d:DataContext="{d:DesignInstance dtvm:ProcessingStepDTVM}">

    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <components:ProcessingAnimation Grid.Row="0" />

        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   FontSize="24"
                   Text="{Binding Text}" />

        <Button Grid.Row="2"
                Content="Cancel"
                Margin="0 20 0 0"
                HorizontalAlignment="Center"
                Command="{Binding Cancel}" />
    </Grid>
</UserControl>